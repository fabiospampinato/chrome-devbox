{
  "extends": "tsex/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "voby",
    "noUnusedParameters": false,
    "paths": {
      "@components": ["./src/content/components"],
      "@components/*": ["./src/content/components/*"],
      "@hooks": ["./src/content/hooks"],
      "@hooks/*": ["./src/content/hooks/*"],
      "@lib": ["./src/content/lib"],
      "@lib/*": ["./src/content/lib/*"],
      "@tools": ["./src/content/tools"],
      "@tools/*": ["./src/content/tools/*"],
      "@utils": ["./src/content/utils.ts"]
    },
    "types": [
      "@types/chrome",
      "vite/client"
    ]
  }
}
